<ul id="lists">
  <% sort_lists(@lists) do |list, index| %>
    <% if list_complete?(list) %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= remaining_todos(list) %> / <%= todos_count(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>